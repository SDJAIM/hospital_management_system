<odoo>
    <record id="view_medical_history_form" model="ir.ui.view">
        <field name="name">hospital.medical.history.form</field>
        <field name="model">hospital.medical.history</field>
        <field name="arch" type="xml">
            <form string="Medical History">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="patient_name" readonly="1"/>
                        <field name="patient_age" readonly="1" optional="show"/>
                        <field name="condition" optional="show"/>
                        <field name="test_type" invisible="1" optional="show"/>
                        <field name="test_type_ids"  widget="many2many_tags"  optional="show"/>
                        <field name="diagnosis_date" optional="show"/>
                        <field name="notes" optional="show"/>
                    </group>

                        <notebook>
                       <page string="Prescribed Medicines">
        <field name="medicine_line_ids">
            <list editable="bottom">
               <field name="medicine_name" placeholder="Start typing..." width="25%"/>
                <field name="dosage" width="20%"/>
                <field name="morning_before" width="9.17%"/>
                <field name="morning_after" width="9.17%"/>
                <field name="afternoon_before" width="9.17%"/>
                <field name="afternoon_after" width="9.17%"/>
                <field name="night_before" width="9.17%"/>
                <field name="night_after" width="9.15%"/>
            </list>
            <form>
            <group>
                <field name="medicine_name"/>
                <field name="dosage"/>
                <field name="morning_before"/>
                <field name="morning_after"/>
                <field name="afternoon_before"/>
                <field name="afternoon_after"/>
                <field name="night_before"/>
                <field name="night_after"/>
            </group>
        </form>
    </field>
</page>
                    </notebook>

                    <div class="oe_button_box" name="buttons" style="margin-top: 20px; text-align: center;">
                     <button name="action_save_patient"
                            type="object"
                            string="Save"
                            class="btn-primary"
                            style="margin-right: 10px; padding: 10px 20px; font-size: 20px;"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_medical_history_list" model="ir.ui.view">
        <field name="name">hospital.medical.history.list</field>
        <field name="model">hospital.medical.history</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="condition" class="wrap-condition"/>
                <field name="diagnosis_date"/>
            </list>
        </field>
    </record>

    <record id="action_medical_history" model="ir.actions.act_window">
        <field name="name">Medical Histories</field>
        <field name="res_model">hospital.medical.history</field>
        <field name="view_mode">list,form</field>
    </record>
 <menuitem id="doctor_id" parent="doctor" action="hospital_management_system.action_medical_history"/>

</odoo>
